<%= form_for(product) do |f| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= "Наименование" %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= "Материал" %>
    <%= f.text_field :material %>
  </div>


  <div class="field">
    <%= "Размеры" %>
    <%= f.text_field :size %>
  </div>

  <div class="field">
    <%= "Сорт" %>
    <%= f.number_field :sort %>
  </div>

  <div class="field">
    <%= "Цена" %>
    <%= f.text_field :price %>
  </div>

  <div class="field">
    <%= "Ед. изм" %>
    <%= f.text_field :unit %>
  </div>

  <div class="field">
    <%= "Изображение" %>
    <%= f.text_field :img %>
  </div>

  <div class="actions">
    <%= f.submit "Применить"%>
  </div>
<% end %>
