<p id="notice"><%= notice %></p>

<%= link_to 'Добавить товар', new_product_path %>
<%= link_to 'Выйти', destroy_user_session_path,  :method => :delete, style: "float: right" %>
<table class="sort-table">
  <thead>
  <tr>
    <th><%= sortable 'name', 'Наименование'%></th>
    <th><%= sortable 'material', 'Материал' %></th>
    <th><%= sortable 'type_wood', 'Порода' %></th>
    <th><%= sortable 'processing', 'Обработка' %></th>
    <th><%= sortable 'size', 'Габариты' %></th>
    <th><%= sortable 'sort', 'Сорт' %></th>
    <th><%= sortable 'price', 'Цена' %></th>
    <th><%= sortable 'unit', 'Ед. изм' %></th>
    <th><%= sortable 'img', 'Изображение' %></th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @products.each do |product| %>
      <tr class=<%= cycle('even', 'odd') %>>
        <td><%= product.name %></td>
        <td><%= product.material %></td>
        <td><%= product.type_wood %></td>
        <td><%= product.processing %></td>
        <td><%= product.size %></td>
        <td><%= product.sort %></td>
        <td><%= product.price %></td>
        <td><%= product.unit %></td>
        <td><%= product.img %></td>
        <td><%= link_to 'Смотреть', product %></td>
        <td><%= link_to 'Редактировать', edit_product_path(product) %></td>
        <td><%= link_to 'Удалить', product, method: :delete, data: {confirm: 'Are you sure?'} %></td>
      </tr>
  <% end %>
  </tbody>
</table>
